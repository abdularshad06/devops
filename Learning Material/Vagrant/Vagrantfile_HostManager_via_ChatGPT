# Vagrantfile

# Define your virtual machines and their configurations here
Vagrant.configure("2") do |config|

  # Database VMs
  config.vm.define "db1" do |db1|
    db1.vm.box = "ubuntu/bionic64"  # Use the desired base box
    db1.vm.network "private_network", ip: "192.168.33.10"
    db1.vm.hostname = "db1.example.com"
  end

  config.vm.define "db2" do |db2|
    db2.vm.box = "ubuntu/bionic64"  # Use the desired base box
    db2.vm.network "private_network", ip: "192.168.33.11"
    db2.vm.hostname = "db2.example.com"
  end

  # Web VMs
  config.vm.define "web1" do |web1|
    web1.vm.box = "ubuntu/bionic64"  # Use the desired base box
    web1.vm.network "private_network", ip: "192.168.33.20"
    web1.vm.hostname = "web1.example.com"
  end

  config.vm.define "web2" do |web2|
    web2.vm.box = "ubuntu/bionic64"  # Use the desired base box
    web2.vm.network "private_network", ip: "192.168.33.21"
    web2.vm.hostname = "web2.example.com"
  end

  # Plugin configuration
  config.hostmanager.enabled = true
  config.hostmanager.manage_host = true
  config.hostmanager.ignore_private_ip = false
  config.hostmanager.include_offline = true
  config.hostmanager.aliases = {
    "db1.example.com" => "192.168.33.10",
    "db2.example.com" => "192.168.33.11",
    "web1.example.com" => "192.168.33.20",
    "web2.example.com" => "192.168.33.21"
  }

end